{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Liste des Clients</h1>
        <a href="{{ path('app_client_new') }}" class="btn btn-success">➕ Nouveau Client</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom du Manager</th>
                    <th>Nom de l'Entreprise</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Pays</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.managerName }}</td>
                    <td>{{ client.companyName }}</td>
                    <td>{{ client.phoneNumber }}</td>
                    <td>{{ client.address }}</td>
                    <td>{{ client.country }}</td>
                    <td class="text-center">
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-sm btn-outline-primary me-2">Afficher</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
